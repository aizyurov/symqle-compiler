{}


public interface zCursorSpecification<T> : Query<T> {}

public class CursorSpecification<T> implements zCursorSpecification<T>
{}

import java.util.List;
<T> zSelectStatement<T> ::= cspec:zCursorSpecification<T>
    ::
    import java.util.LinkedList;
    implicit SelectStatement<T>

| cspec:zCursorSpecification<T>  FOR READ ONLY
    :: SelectStatement<T> forReadOnly

| cspec:zCursorSpecification<T> FOR UPDATE
    :: SelectStatement<T> forUpdate
;

<T> zCursorSpecification<T> ::= qe:zQueryExpression<T>
    ::  implicit QueryExpression<T>

| qe:zQueryExpression<T> obc:zOrderByClause
    :: QueryExpression<T> orderBy
;

